<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="#E2E2E2">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Token Reader ID"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textViewTokenID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Token Reader ID"
        android:textAlignment="center"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Token Reader- Location"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/editTextTokenID"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:background="@android:color/transparent"
        android:hint="Enter Token ID"/>

    <Button
        android:id="@+id/buttonTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="Tap" />

    <Button
        android:id="@+id/buttonLogoutReader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Reader Logout" />

</LinearLayout>


</LinearLayout>