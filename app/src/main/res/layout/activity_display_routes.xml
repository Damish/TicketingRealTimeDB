<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_Dark"
    android:orientation="vertical"
    tools:context=".ui.Manager.AddRoutes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_Dark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Route Details Users Used"
            android:textAlignment="center"
            android:textColor="#FFFCFC"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_Ashk"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:text="Departure:"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/editText_start_po"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_txt_backgroundk"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="textStart"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_Ashk"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:text="Arrival:"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/editText_end_po"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/edit_txt_backgroundk"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_Ashk"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_day"
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="Day:"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/spinner_day"
            style="@android:style/Widget.Spinner.DropDown"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/spinnerk_background"
            android:entries="@array/Day_type" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_Ashk"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_view_time"
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="Time:"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/spinner_time"
            style="@android:style/Widget.Spinner.DropDown"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:background="@drawable/spinnerk_background"
            android:entries="@array/Time_type" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_Ashk"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button_search_route"
            android:layout_width="133dp"
            android:layout_height="40dp"
            android:layout_marginStart="138dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_btn_d1"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:paddingStart="20dp"
            android:text="Search"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listview_Route"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:divider="@null" />
</LinearLayout>